@model About
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<form method="post" enctype="multipart/form-data" style="padding-bottom: 50px;">
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(m => m.Title)
        @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Title, null, new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Description)
        @Html.TextAreaFor(m => m.Description, new { @class = "form-control", @id = "descriptionEditor" })
        @Html.ValidationMessageFor(m => m.Description, null, new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label>Current photo</label>
        <img src="~/Public/images/@Model.Image" class="img-thumbnail" width="200" />
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Photo)
        @Html.TextBoxFor(m => m.Photo, new { @class = "form-control", @type = "file" })
        @Html.ValidationMessageFor(m => m.Photo, null, new { @class = "text-danger" })
    </div>

    <input type="submit" value="Update image" class="btn btn-success" />
    <a href="~/Admin/About/Index" class="btn btn-black-outline">Back to the list</a>
</form>

@section scripts{
    <script src="~/Areas/Admin/Public/js/jquery.validate.min.js"></script>
    <script src="~/Areas/Admin/Public/js/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/ckeditor/ckeditor.js"></script>
    <script>
        CKEDITOR.replace("descriptionEditor");
    </script>
}